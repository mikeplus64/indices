name:                indices
version:             1.7.1
synopsis:            Multi-dimensional statically bounded indices.
description:         
    Multi-dimensional statically bounded indices, with operations that unroll.
license:             MIT
license-file:        LICENSE
author:              Mike Ledger
maintainer:          eleventynine@gmail.com
category:            Data
build-type:          Simple
extra-source-files:  CHANGELOG.md
cabal-version:       >=1.10

library
  exposed-modules:     Data.Index
  -- other-modules:       
  other-extensions:    DataKinds
                     , GADTs
                     , PolyKinds
                     , BangPatterns
                     , TemplateHaskell
                     , ScopedTypeVariables
                     , TypeOperators
                     , MultiParamTypeClasses
                     , TypeFamilies
                     , UndecidableInstances
                     , FlexibleContexts
                     , FlexibleInstances
                     , DeriveGeneric
                     , DeriveDataTypeable
                     , DeriveFunctor
                     , DeriveFoldable
                     , DeriveTraversable
                     , PatternGuards
                     , QuasiQuotes
                     , Rank2Types
                     , KindSignatures

  build-depends:       base >=4.7 && <5.0
                     , tagged >=0.7
                     , template-haskell >=2.9

  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall

benchmark Ranges
  hs-source-dirs:      benchmarks
  main-is:             Ranges.hs 
  type:                exitcode-stdio-1.0
  build-depends:       base >=4.7 && <5.0
                     , indices >= 1.6.0
                     , criterion
                     , deepseq
  default-language:    Haskell2010

test-suite tests 
  hs-source-dirs:      tests
  main-is:             Tests.hs 
  type:                exitcode-stdio-1.0
  build-depends:       base >=4.7 && <5.0
                     , indices >= 1.6.0
                     , QuickCheck
  default-language:    Haskell2010


  

